# NoSleep-Ops Web Monitor Configuration
# Copy this file to .env and customize for your environment

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-change-this
DEBUG=false

# Database Configuration
DATABASE_PATH=/app/data/attack_monitor.db

# Security Settings
ENABLE_AUTH=false
AUTH_USERNAME=admin
AUTH_PASSWORD=change-this-password

# Monitoring Settings
LOG_MONITORING_INTERVAL=3
MAX_RECENT_ATTACKS=100
MAX_RECENT_DEFENSES=50

# Alert Configuration
ENABLE_EMAIL_ALERTS=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_RECIPIENTS=admin@company.com,security@company.com

# Webhook Configuration
ENABLE_WEBHOOKS=false
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Performance Settings
WORKER_THREADS=4
MAX_CONNECTIONS=100

# Docker Integration
DOCKER_SOCKET=/var/run/docker.sock
ENABLE_DOCKER_MONITORING=true

# Threat Intelligence
ENABLE_THREAT_INTEL=false
VIRUSTOTAL_API_KEY=your-vt-api-key
ABUSEIPDB_API_KEY=your-abuse-api-key
